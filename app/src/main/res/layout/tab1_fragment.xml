<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimerTabFragment"
    >

    <TableLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        >
        <TableRow
            android:id="@+id/row1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <info.hoang8f.widget.FButton
                android:id="@+id/btDejarMAquina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="EJECUTAR&#10;EN&#10;MÁQUINA"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp" />

            <info.hoang8f.widget.FButton
                android:id="@+id/btSacarMaquina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="SACAR DE&#10;MÁQUINA"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:id="@+id/row2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <info.hoang8f.widget.FButton
                android:id="@+id/btUbicar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="UBICAR"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <info.hoang8f.widget.FButton
                android:id="@+id/btProgramar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="PLAN&#10;MÁQUINA"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:id="@+id/row3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <info.hoang8f.widget.FButton
                android:id="@+id/btEditarEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Editar&#10;etiqueta"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <info.hoang8f.widget.FButton
                android:id="@+id/btSalir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:backgroundTint="@color/red"
                android:text="SALIR"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>